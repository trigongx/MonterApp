<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.details.DetailsApplicationFragment">

    <TextView
        android:id="@+id/tv_helper_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reason"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reason"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_helper_reason"
        android:textColor="@color/black"
        android:layout_marginStart="32dp"
        android:textSize="22sp"/>


    <TextView
        android:id="@+id/tv_helper_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        app:layout_constraintStart_toStartOf="@id/tv_reason"
        app:layout_constraintTop_toBottomOf="@id/tv_reason"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        app:layout_constraintStart_toEndOf="@id/tv_helper_address"
        app:layout_constraintTop_toTopOf="@id/tv_helper_address"
        app:layout_constraintBottom_toBottomOf="@id/tv_helper_address"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_helper_region_name"
        android:text="@string/region"
        app:layout_constraintStart_toStartOf="@id/tv_helper_address"
        app:layout_constraintTop_toBottomOf="@id/tv_helper_address"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_region_name"
        android:text="@string/region"
        app:layout_constraintStart_toEndOf="@id/tv_helper_region_name"
        app:layout_constraintTop_toTopOf="@id/tv_helper_region_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_helper_region_name"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_helper_personal_account"
        android:text="@string/personal_account"
        app:layout_constraintStart_toStartOf="@id/tv_helper_region_name"
        app:layout_constraintTop_toBottomOf="@id/tv_helper_region_name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_personal_account"
        android:text="@string/personal_account"
        app:layout_constraintStart_toEndOf="@id/tv_helper_personal_account"
        app:layout_constraintTop_toTopOf="@id/tv_helper_personal_account"
        app:layout_constraintBottom_toBottomOf="@id/tv_helper_personal_account"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_helper_phone_number"
        android:text="@string/phone"
        app:layout_constraintStart_toStartOf="@id/tv_helper_personal_account"
        app:layout_constraintTop_toBottomOf="@id/tv_helper_personal_account"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_phone_number"
        android:text="@string/phone"
        app:layout_constraintStart_toEndOf="@id/tv_helper_phone_number"
        app:layout_constraintTop_toTopOf="@id/tv_helper_phone_number"
        app:layout_constraintBottom_toBottomOf="@id/tv_helper_phone_number"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hepler_date"
        android:text="@string/date_of_application"
        app:layout_constraintStart_toStartOf="@id/tv_helper_phone_number"
        app:layout_constraintTop_toBottomOf="@id/tv_helper_phone_number"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date"
        android:text="@string/date_of_application"
        app:layout_constraintStart_toEndOf="@id/tv_hepler_date"
        app:layout_constraintTop_toTopOf="@id/tv_hepler_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_hepler_date"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/montersCommentContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hepler_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:boxStrokeColor="@color/purple_500"
        android:layout_marginHorizontal="32dp"
        android:hint="@string/monters_comment"
        android:textColorHint="@color/black"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_monters_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionDone"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:endIconDrawable="@drawable/ic_calendar"
        app:endIconMode="custom"
        android:id="@+id/completedDateContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/montersCommentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/purple_500"
        android:layout_marginHorizontal="32dp"
        android:hint="@string/data"
        android:textColorHint="@color/black"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_completed_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:clickable="true"
            android:focusable="false"
            android:imeOptions="actionDone"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:padding="4dp"
        android:id="@+id/img_monter_photo"
        app:layout_constraintTop_toBottomOf="@id/spinner_application_status"
        android:layout_marginHorizontal="32dp"
        android:src="@drawable/ic_upload_image"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_spinner"
        android:layout_height="170dp"/>

    <Spinner
        android:paddingStart="8dp"
        android:id="@+id/spinner_application_status"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/completedDateContainer"
        android:entries="@array/options"
        android:background="@drawable/bg_spinner"
        android:prompt="@string/application_status"/>


    <Button
        android:id="@+id/btn_save_application"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:text="@string/save"
        android:textSize="16sp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>